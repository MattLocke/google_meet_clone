              srcset=""
              >
             </div>
           </div>
      </div>
      </div>
    </div>
<footer class="footer text-center">
  <div class="container">
      <p class="text-muted"><i class="fab fa-google"></i><span class="font-weight-bold">oogle</span> Meet By Meer Bahadin </p>
  </div>
</footer>
</body>
<script>
const idInput = document.getElementById('roomid-input');
const joinBtn = document.getElementById('join-btn');
idInput.addEventListener('keyup' , (e) => {
  joinBtn.classList.remove('disabled');
  if(e.target.value === '') {
    joinBtn.classList.add('disabled');
  }
})

joinBtn.addEventListener('click' , () => {
  window.location.href = `/${idInput.value}`;
})

</script>
